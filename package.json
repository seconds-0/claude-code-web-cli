{
  "name": "claude-code-cloud",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:core": "turbo test:core",
    "test:e2e": "turbo test:e2e",
    "test:watch": "turbo test -- --watch",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "costs": "node scripts/check-costs.mjs",
    "costs:daily": "node scripts/check-costs.mjs --daily",
    "costs:month": "node scripts/check-costs.mjs --month",
    "costs:events": "node scripts/check-costs.mjs --events"
  },
  "devDependencies": {
    "next": "^15.1.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
